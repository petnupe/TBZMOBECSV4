		<icon height="40" platform="ios" src="www/res/icon/ios/Icon-App-20x20@2x.png" width="40" />
		<icon height="40" platform="ios" src="www/res/icon/ios/Icon-App-40x40@1x.png" width="40" />
		<icon height="48" platform="ios" src="www/res/icon/ios/icon-48-mdpi.png" width="48" />
		<icon height="58" platform="ios" src="www/res/icon/ios/Icon-App-29x29@2x.png" width="58" />
		<icon height="60" platform="ios" src="www/res/icon/ios/Icon-App-20x20@3x.png" width="60" />
		<icon height="60" platform="ios" src="www/res/icon/ios/Icon-App-60x60@1x.png" width="60" />
		<icon height="72" platform="ios" src="www/res/icon/ios/icon-72-hdpi.png" width="72" />
		<icon height="76" platform="ios" src="www/res/icon/ios/Icon-App-76x76@1x.png" width="76" />
		<icon height="80" platform="ios" src="www/res/icon/ios/Icon-App-40x40@2x.png" width="80" />
