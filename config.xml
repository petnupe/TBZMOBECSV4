<?xml version='1.0' encoding='utf-8'?>
<widget codeVersion="3.0.0" id="com.tecbiz.autorizador" version="3.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TecBiz Lojista</name>
    <description>
        Aplicativo destinado a rede conveniada TecBiz para realização de autorizações, estornos e consultas.
    </description>
    <author email="tecnologia@tecbiz.com.br" href="http://tecbiz.com.br">
        Equipe TecBiz
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <platform name="ios">
		<icon height="20" platform="ios" src="www/res/icon/ios/Icon-App-20x20@1x.png" width="20" />
