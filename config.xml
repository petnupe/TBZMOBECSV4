        <icon height="120" platform="ios" src="www/res/icon/ios/Icon-App-40x40@3x.png" width="120" />
        <icon height="120" platform="ios" src="www/res/icon/ios/Icon-App-60x60@2x.png" width="120" />
		<icon height="152" platform="ios" src="www/res/icon/ios/Icon-App-76x76@2x.png" width="152" />
